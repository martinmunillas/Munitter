    <script defer phx-track-static type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </head>
  <body>
    <div class="main_layout">
      <aside class="aside">
          <nav role="navigation">
            <a href="/">
              <h1 class="logo">Munitter</h1>
            </a>
            <ul>
              <%= render "_user_menu.html", assigns %>
            </ul>
          </nav>
      </aside>
      <main>
        <%= @inner_content %>
      </main>
    </div>
  </body>
</html>
